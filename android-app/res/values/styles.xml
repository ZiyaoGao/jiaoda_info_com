<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- ZHCNNB App -->
    <style name="Animation" />

    <style name="Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/full_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.NoTitleBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:spinnerStyle">@android:style/Widget.Holo.Light.Spinner</item>
        <item name="windows_bg">@color/day_windows_bg</item>
        <item name="android:textColor">@color/result_view</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:actionBarStyle">@null</item>
    </style>


    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_exit</item>
    </style>

    <style name="App.Preference.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/pref_checkbox_selector_style</item>
    </style>

    <style name="App.Preference.TextAppearance.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="App.Preference.TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text_light</item>
    </style>


    <style name="checkbox_password" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_password</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="login_button">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:layout_marginLeft">@dimen/space_25</item>
        <item name="android:layout_marginRight">@dimen/space_25</item>
        <item name="android:layout_marginTop">@dimen/space_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--gender -->
    <style name="radio_gender">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/home_solid</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
            <item name="android:drawableRight">@drawable/radio_checkbox</item>
        <item name="android:paddingTop">@dimen/space_5</item>
    </style>

    <style name="radio_img_load">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/home_solid</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/radio_checkbox</item>
        <item name="android:paddingTop">@dimen/space_5</item>
    </style>
    <!--登陆注册输入框-->
    <style name="edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/space_10</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="red_packet_img">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="right_forward">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
    </style>


    <style name="head_icon">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">5dip</item>
    </style>
    <!-- viewpage文本  滑动标签标题 -->
    <style name="viewpage_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/viewpage_selector_slide_title</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="fill_fill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="teacher_detail_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/space_25</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/boder</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/space_3</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
        <item name="android:paddingRight">@dimen/space_5</item>
        <item name="android:paddingLeft">@dimen/space_5</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/find_black</item>
    </style>
    <style name="widget_listview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:listSelector">@drawable/listview_item_selector</item>
        <item name="android:divider">@drawable/listview_divider_line</item>
        <item name="android:dividerHeight">1.0dip</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollingCache">false</item>
    </style>
</resources>